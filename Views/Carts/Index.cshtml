@model project.Models.Cart

@{
    ViewData["Title"] = "My Cart";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
    </dl>

    @if (Model.CartItems != null)
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                </tr>
            </thead>

            <tbody>
                @foreach(var cartItem in Model.CartItems)
                {
                    <tr>
                        <td>@cartItem.Product.Name</td>
                        <td>@cartItem.Quantity</td>
                        <td>@cartItem.Product.Price</td>
                        <td>
                            @((decimal)(cartItem.Quantity * cartItem.Product.Price))
                        </td>
                    </tr>
                }
            </tbody>

            <tfoot>
                <tr>
                    <td>Total</td>
                    <td colspan="3">@(Model.CartItems.Sum(cartItem => (decimal)(cartItem.Quantity * cartItem.Product.Price)))</td>
                </tr>
            </tfoot>
        </table>
    }
    @if (Model.CartItems.Count > 0)
    {
        <a class="btn btn-success" asp-controller="Orders" asp-action="Checkout">
            Checkout
        </a>
    }
</div>